@inherits BasicGameView<PickelBidViewModel>
@if (DataContext == null)
{
    return;
}
<BaseFrameBlazor Text="Bid Info">
    <div>
        <NumberChooserBlazor NumberPicker="DataContext.Model.Bid1" />
    </div>
    <div>
        <EnumPickerBlazor E="EnumSuitList"
                          Context="piece"
                          TargetSize="16vh"
                          ListPicker="DataContext.Model.Suit1">
            <DeckPiece Suit="piece.EnumValue" />
        </EnumPickerBlazor>
    </div>
    <div>
        <GameButtonComponent DataContext="DataContext"
                             MethodName="@BidMethod"
                             Display="Place Bid" />
        <GameButtonComponent DataContext="DataContext"
                             MethodName="@PassMethod"
                             Display="Pass" />
    </div>
</BaseFrameBlazor>