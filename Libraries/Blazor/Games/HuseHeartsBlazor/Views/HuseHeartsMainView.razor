@inherits BasicGameView<HuseHeartsMainViewModel>
@if (_vmData == null || DataContext == null || _gameContainer == null)
{
    return;
}
<HorizontalDiv Margins="5px">
    <ScoreBoardBlazor P="HuseHeartsPlayerItem"
                      Columns="_scores"
                      Players="_gameContainer.SaveRoot.PlayerList" />
</HorizontalDiv>
<HorizontalDiv Margins="5px">
    <LabelGridComponent DataContext="DataContext" Labels="_labels" />
</HorizontalDiv>
<HorizontalDiv Margins="5px">
    <DeckOfCardsSeveralPlayersTrickBlazor B="HuseHeartsTrickAreaCP" P="HuseHeartsPlayerItem" T="HuseHeartsCardInformation" DataContext="_vmData.TrickArea1" />
</HorizontalDiv>
<HorizontalDiv Margins="5px">
    <ParentControl VM="PassingViewModel">
        <PassingView />
    </ParentControl>
</HorizontalDiv>
<HorizontalDiv Margins="5px">
    <ParentControl VM="MoonViewModel">
        <MoonView />
    </ParentControl>
</HorizontalDiv>
<HorizontalDiv Margins="5px">
    <DeckOfCardsHandBlazor R="HuseHeartsCardInformation" Hand="_vmData.Blind1" />
</HorizontalDiv>
<div>
    <DeckOfCardsHandBlazor R="HuseHeartsCardInformation" Divider="1.4" Hand="_vmData.PlayerHand1" />
</div>
<div>
    <DeckOfCardsHandBlazor R="HuseHeartsCardInformation" Divider="1.4" Hand="_vmData.Dummy1" />
</div>
@if (TestData!.SaveOption == EnumTestSaveCategory.RestoreOnly)
{
    <ParentControl VM="RestoreViewModel">
        <RestoreView />
    </ParentControl>
}