@inherits SimpleActionView

@if (CompleteContainer == null || DataContext == null)
{
    return;
}
<FinalActionLayout>
    <PlayerUI DataContext="DataContext" UsePlayerButton="true" />
    <HandBlazor D="FluxxCardInformation" Hand="CompleteContainer.ActionContainer.OtherHand" />
    <div>
        @if (DataContext.ButtonChooseCardVisible)
        {
        <GameButtonComponent DataContext="DataContext"
                             StartOnNewLine="true"
                             MethodName="@ChooseMethod"
                             Display="Choose Card" />
        }
        <KeeperButton K="ActionTakeUseViewModel" @key="GetKey"  StartsOnNewLine="true" />
    </div>
</FinalActionLayout>